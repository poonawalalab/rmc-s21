<?xml version="1.0"?>

<robot name="DoublePendulum">
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="PandaRobot/deps/Panda/meshes/collision/link0.obj"/>
      </geometry>
      <material name="green">
	       <color rgba="0 1 0 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="PandaRobot/deps/Panda/meshes/collision/link0.obj"/>
      </geometry>
      <material name="panda_white"/>
    </collision>
  </link>

  <link name="upper_link">
    <inertial>
      <origin xyz="0 0 0.333" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.083" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.333" rpy="0 0 0" />
      <geometry>
        <mesh filename="PandaRobot/deps/Panda/meshes/visual/link1.dae"/>
      </geometry>
      <material name="red">
	       <color rgba="1 0 0 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="PandaRobot/deps/Panda/meshes/collision/link1.obj"/>
      </geometry>
    </collision>
  </link>
  <joint name="shoulder" type="continuous">
    <parent link="base_link" />
    <child link="upper_link" />
    <origin xyz="0 0 0" />
    <axis xyz="0 0 1" />
    <dynamics damping="0.1" />
  </joint>

  <link name="lower_link">
    <inertial>
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.33" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <geometry>
         <cylinder length="2.1" radius=".05" />
      </geometry>
      <material name="blue">
	       <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>



  <joint name="elbow" type="continuous">
    <parent link="upper_link" />
    <child link="lower_link" />
    <origin xyz="0 .1 -1" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>
</robot>
